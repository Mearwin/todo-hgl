{
    "name": "todo-hgl",
    "displayName": "todo-highlight",
    "description": "Add highlight on *.todo files",
    "icon": "images/icon.png",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Mearwin/todo-hgl.git"
      },
    "categories": [
        "Other"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "test": "vitest run",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "todoHighlight.toggleState",
                "title": "Todo Highlight: Toggle Task State"
            }
        ],
        "keybindings": [
            {
                "command": "todoHighlight.toggleState",
                "key": "ctrl+shift+t",
                "mac": "cmd+shift+t",
                "when": "editorTextFocus && resourceExtname == .todo"
            }
        ],
        "configuration": {
            "title": "Todo Highlight",
            "properties": {
                "todoHighlight.doneColor": {
                    "type": "string",
                    "default": "rgba(130,230,130,0.3)",
                    "description": "Background color for completed (done) tasks"
                },
                "todoHighlight.todoColor": {
                    "type": "string",
                    "default": "rgba(230,130,130,0.3)",
                    "description": "Background color for pending (todo) tasks"
                },
                "todoHighlight.outcomeColor": {
                    "type": "string",
                    "default": "rgba(130,130,230,0.3)",
                    "description": "Background color for outcome/result items"
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "@types/vscode": "^1.67.0",
        "@vscode/vsce": "^3.3.2",
        "vitest": "^3.0.0",
        "typescript": "^5.9.3"
    },
    "publisher": "Todo-hgl"
}