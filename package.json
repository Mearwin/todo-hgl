{
    "name": "todo-hgl",
    "displayName": "todo-highlight",
    "description": "Add highlight on *.todo files",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Mearwin/todo-hgl.git"
      },
    "categories": [
        "Other"
    ],
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Todo Highlight",
            "properties": {
                "todoHighlight.doneColor": {
                    "type": "string",
                    "default": "rgba(130,230,130,0.3)",
                    "description": "Background color for completed (done) tasks"
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "@types/vscode": "^1.67.0",
        "typescript": "^5.9.3"
    },
    "publisher": "Todo-hgl"
}